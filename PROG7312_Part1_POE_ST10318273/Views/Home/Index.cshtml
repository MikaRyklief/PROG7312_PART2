@{
    ViewData["Title"] = "Municipal Services";
}

<div class="container my-4">
    <div class="hero">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-3">Welcome to Municipal Services</h1>
  
                <p class="lead mb-4">Access key services quickly: report issues, track requests, and find helpful information.</p>

                <a class="btn btn-light me-2" href="/Issues/Report">Report an Issue</a>
  
                <a class="btn btn-outline-light" href="#services">Explore services</a>
            </div>

            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <img src="~/logo.svg" alt="Western Cape Government" style="height:64px;width:auto;" />
            </div>
        </div>
    </div>

    <section id="services" class="mt-4">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="p-3 feature-card h-100">
                    <h5 class="mb-2">Report Issues</h5>

                    <p class="mb-3">Log municipal issues like water leaks, potholes, or power faults.</p>
   
                    <a class="btn btn-outline-primary" href="/Issues/Report">Start report</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-3 feature-card h-100">
                    <h5 class="mb-2">Local Events</h5>
     
                    <p class="mb-3">Stay informed about community events and announcements.</p>

                    <a class="btn btn-outline-primary" href="/Events">View events</a>
                </div>
            </div>
       
            <div class="col-md-4">
                <div class="p-3 feature-card h-100">
                    <h5 class="mb-2">Request Status</h5>
       
                    <p class="mb-3">Track the progress of your submitted service requests.</p>
                 
                    <button class="btn btn-outline-primary" disabled>Coming soon</button>
                </div>
            </div>
        </div>
    </section>
</div>
